<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/background_item_product"
    >
    <ImageView
        android:id="@+id/imageProductOfFirm"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/b1" />

    <TextView

        android:id="@+id/nameProductOfFirm"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEST TEST"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/imageProductOfFirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageProductOfFirm"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/priceSaleProductOfFirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20.000.000"
        android:layout_marginTop="5dp"
        android:textColor="@color/orange"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintStart_toEndOf="@id/unitPriceSaleProductOfFirm"
        app:layout_constraintTop_toBottomOf="@id/nameProductOfFirm"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/unitPriceSaleProductOfFirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="đ"
        android:layout_marginTop="9dp"
        android:textColor="@color/orange"
        android:textSize="11.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameProductOfFirm"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/unitPriceProductOfFirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="đ"
        android:textSize="11.5sp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/priceProductOfFirm"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/priceSaleProductOfFirm"
        app:layout_constraintTop_toBottomOf="@id/nameProductOfFirm"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/priceProductOfFirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20.000.000"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameProductOfFirm"
        app:layout_constraintVertical_bias="0" />
</androidx.constraintlayout.widget.ConstraintLayout>
